<Window x:Class="JTS_ServiCenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JTS_ServiCenter"
        mc:Ignorable="d"
        Title="MainWindow" Height="856" Width="1820">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="fName_txt" HorizontalAlignment="Left" Height="52" Margin="28,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="271" Grid.Column="2" FontSize="18" />
        <TextBox x:Name="lName_txt" HorizontalAlignment="Left" Height="52" Margin="323,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="364" Grid.Column="2" FontSize="18"/>
        <Label Content="ID Cliente" HorizontalAlignment="Left" Margin="719,19,0,0" VerticalAlignment="Top" Grid.Column="2" Height="48" Width="134" FontSize="24"/>
        <TextBox x:Name="serv_txt" HorizontalAlignment="Left" Height="50" Margin="34,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="157" Grid.Column="2" FontSize="18"/>
        <TextBox x:Name="servPrice_txt" HorizontalAlignment="Left" Height="50" Margin="218,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201" Grid.Column="2" FontSize="18"/>
        <TextBox x:Name="servDesc_txt" HorizontalAlignment="Left" Height="221" Margin="36,298,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="511" Grid.Column="2" FontSize="18"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="28,19,0,0" VerticalAlignment="Top" Height="48" Width="118" FontSize="24" Grid.Column="2"/>
        <Label Content="Apellidos" HorizontalAlignment="Left" Margin="323,19,0,0" VerticalAlignment="Top" Grid.Column="2" Height="48" Width="116" FontSize="24"/>
        <Label Content="Servicio" HorizontalAlignment="Left" Margin="34,148,0,0" VerticalAlignment="Top" Height="48" Width="118" Grid.Column="2" FontSize="24"/>
        <Label Content="Fecha de Servicio" HorizontalAlignment="Left" Margin="222,148,0,0" VerticalAlignment="Top" Grid.Column="2" Height="48" Width="196" FontSize="24"/>
        <Label Content="Precio de Servicio" HorizontalAlignment="Left" Margin="464,148,0,0" VerticalAlignment="Top" Grid.Column="2" Height="48" Width="202" FontSize="24"/>
        <Label Content="Descripcion de Servicio" HorizontalAlignment="Left" Margin="36,259,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.314,0.579" Height="48" Width="271" Grid.Column="2" FontSize="24"/>
        <Button x:Name="createBtn" Content="Create Record" HorizontalAlignment="Left" Height="93" Margin="348,711,0,0" VerticalAlignment="Top" Width="234" Grid.Column="2" FontSize="24" Click="createBtn_Click"/>
        <Button x:Name="updateBtn" Content="Update Record" HorizontalAlignment="Left" Height="93" Margin="625,711,0,0" VerticalAlignment="Top" Width="234" Grid.Column="2" FontSize="24" Click="updateBtn_Click"/>
        <Button x:Name="deleteBtn" Content="Delete Record" HorizontalAlignment="Left" Height="93" Margin="888,711,0,0" VerticalAlignment="Top" Width="234" Grid.Column="2" FontSize="24" Click="deleteBtn_Click"/>

        <DataGrid x:Name="datagrid" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="476" Margin="839,25,0,0" VerticalAlignment="Top" Width="844" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="datagrid_SelectionChanged"/>
        <Button x:Name="clearBtn" Content="Clear Data" HorizontalAlignment="Left" Height="93" Margin="1144,711,0,0" VerticalAlignment="Top" Width="234" Grid.Column="2" FontSize="24" Click="clearBtn_Click"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="454,148,0,0" VerticalAlignment="Top" Height="48" Width="52" FontSize="24" Grid.Column="2"/>
        <TextBox x:Name="customerFinder_txt" HorizontalAlignment="Left" Height="50" Margin="454,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="126" Grid.Column="2" FontSize="18"/>

    </Grid>
</Window>
